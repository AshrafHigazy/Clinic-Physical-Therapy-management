@model Clinic_Management_System.Models.Receptionist
@{
    ViewData["Title"] = "حذف موظف الاستقبال";
}

<div class="container py-4">
    <div class="card card-modern-delete text-center" style="max-width: 650px; margin: auto;">
        <h3 class="text-danger fw-bold mb-3">
            <i class="bi bi-trash3"></i> حذف موظف الاستقبال
        </h3>

        <h5 class="fw-semibold text-dark mb-4">@Model.FullName</h5>

        <div class="table-responsive mb-4">
            <table class="table table-modern text-center align-middle">
                <tbody>
                @*     <tr>
                        <th>البريد الإلكتروني</th>
                        <td>@Model.Email</td>
                    </tr> *@
                    <tr>
                        <th>رقم الهاتف</th>
                        <td>@Model.Phone</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="alert alert-warning mt-3 rounded-3 shadow-sm">
            ⚠ هل أنت متأكد أنك تريد حذف الموظف <strong>@Model.FullName</strong> نهائيًا؟
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger px-4 rounded-pill">
                    <i class="bi bi-trash"></i> حذف نهائي
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                    <i class="bi bi-arrow-return-left"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <style>
        /* 🌟 تصميم مودرن موحّد بلون أحمر */
        .card-modern-delete {
            background: #fff;
            border: 2px solid #dc3545; /* حواف حمراء */
            border-top: 4px solid #dc3545;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(220, 53, 69, 0.4); /* ظل أحمر */
            padding: 30px;
            animation: fadeIn 0.4s ease;
        }

        .table-modern {
            background: #ffffff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.25);
        }

            .table-modern th {
                background-color: #fdeaea;
                color: #dc3545;
                width: 40%;
                font-weight: 700;
                border-bottom: 2px solid #b02a37;
            }

            .table-modern td {
                border-color: #dee2e6;
                vertical-align: middle;
            }

            .table-modern tr:hover td {
                background-color: #fff1f1 !important;
                transition: background-color 0.2s ease;
            }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
            font-weight: 500;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            font-weight: 600;
        }

            .btn-danger:hover {
                background-color: #b02a37;
            }

        .btn-outline-secondary:hover {
            background-color: #e9ecef;
            color: #212529;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
}
