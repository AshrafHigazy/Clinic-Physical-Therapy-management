@model Clinic_Management_System.Models.InternDoctor

@{
    ViewData["Title"] = "حذف الطبيب المتدرب";
}

<div class="container py-4">

    <div class="card card-modern text-center" style="max-width: 650px; margin: auto;">

        <!-- 🔴 العنوان -->
        <h3 class="text-danger fw-bold mb-3">
            <i class="bi bi-trash3"></i> تأكيد حذف الطبيب المتدرب
        </h3>

        <h5 class="fw-semibold text-dark mb-4">@Model.FullName</h5>

        <!-- 🔷 تفاصيل الطبيب -->
        <div class="table-responsive mb-4">
            <table class="table table-modern text-center align-middle">
                <tbody>
                    <tr>
                        <th>الاسم</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>رقم الهاتف</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>الحالة</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success px-3 py-2">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-danger px-3 py-2">غير نشط</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- 🔴 فورم الحذف -->
        <form asp-action="Delete"
              asp-route-id="@Model.InternDoctorId"
              method="post"
              onsubmit="return confirmDelete('@Model.FullName')">

            <div class="mt-4">
                <button type="submit" class="btn btn-danger px-4 rounded-pill">
                    <i class="bi bi-trash"></i> حذف نهائي
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                    <i class="bi bi-arrow-return-left"></i> رجوع
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        // نافذة تأكيد حذف
        function confirmDelete(name) {
            return confirm(`⚠ هل أنت متأكد من حذف الطبيب: "${name}"؟\nسيتم إزالة جميع سجلاته نهائيًا.`);
        }
    </script>

    <style>

        /* 🌟 الكارد الأحمر الموحد */
        .card-modern {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            border: 2px solid #DC3545;
            box-shadow: 0 10px 30px rgba(220, 53, 69, 0.45);
            animation: fadeIn 0.4s ease;
        }

        .table-modern {
            background: #ffffff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.25);
        }

            .table-modern th {
                background-color: #fdeaea;
                color: #DC3545;
                font-weight: 700;
                border-bottom: 2px solid #b02a37;
                width: 40%;
            }

            .table-modern td {
                vertical-align: middle;
            }

            .table-modern tr:hover td {
                background-color: #fff1f1 !important;
                transition: background-color 0.2s ease;
            }

        .btn-danger {
            background-color: #DC3545;
            border-color: #b02a37;
        }

            .btn-danger:hover {
                background-color: #bb2d3b;
                border-color: #8b1f2a;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
