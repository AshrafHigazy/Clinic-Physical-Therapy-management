@model Clinic_Management_System.Models.InternDoctor
@using System.Globalization

@{
    ViewData["Title"] = "سجلات حضور الدكتور " + Model.FullName;
}

<div class="container py-4">

    <div class="card card-modern mb-4">
        <h3 class="text-primary fw-bold text-center mb-3">
            <i class="bi bi-calendar-check"></i> سجلات حضور الدكتور: <span>@Model.FullName</span>
        </h3>

        <div class="mb-4 text-center">
            <p class="mb-1"><strong> الهاتف:</strong> @Model.Phone</p>
            <p>
                <strong> الحالة:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success px-3 py-2">نشط</span>
                }
                else
                {
                    <span class="badge bg-danger px-3 py-2">غير نشط</span>
                }
            </p>
        </div>

        @if (Model.Attendances != null && Model.Attendances.Any())
        {
            <div class="table-responsive">
                <table class="table table-modern table-hover text-center align-middle">
                    <thead>
                        <tr>
                            <th> التاريخ</th>
                            <th>وقت الدخول</th>
                            <th> وقت الخروج</th>
                            <th> الساعات</th>
                            <th>الإجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Attendances.OrderByDescending(a => a.Date))
                        {
                            <tr>
                                <td>@record.Date.ToString("yyyy/MM/dd")</td>

                                <td>@(record.CheckIn?.ToString("hh:mm tt", new CultureInfo("ar-EG")) ?? "—")</td>

                                <td>
                                    @if (record.CheckOut == null)
                                    {
                                        <span class="text-danger">لم يُسجل</span>
                                    }
                                    else
                                    {
                                        @record.CheckOut?.ToString("hh:mm tt", new CultureInfo("ar-EG"))
                                    }
                                </td>

                                <td>@(record.Hours?.ToString("0.##") ?? "—")</td>

                                <td>
                                    @if (record.CheckOut == null)
                                    {
                                        <form asp-controller="InternDoctorAttendances"
                                              asp-action="QuickCheckOut"
                                              method="post" style="display:inline;">
                                            <input type="hidden" name="doctorId" value="@record.InternDoctorId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                                 تسجيل انصراف
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-success fw-bold">تم الانصراف ✅</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                لا توجد سجلات حضور لهذا الطبيب بعد.
            </div>
        }

        <div class="text-center mt-4">
            <a asp-controller="InternDoctors" asp-action="Index"
               class="btn btn-outline-secondary px-4 rounded-pill">
                <i class="bi bi-arrow-return-left"></i> رجوع لقائمة الأطباء
            </a>
        </div>

    </div>
</div>


@section Scripts {
    <style>
        /* 🌟 الكارد الموحّد */
        .card-modern {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            border: 2px solid #0077B6;
            box-shadow: 0 10px 30px rgba(0, 119, 182, 0.45);
            animation: fadeIn .4s ease;
        }

        /* 🌟 تنسيق الجدول */
        .table-modern {
            border-radius: 12px;
            overflow: hidden;
            background: #ffffff;
            box-shadow: 0 4px 15px rgba(0, 119, 182, 0.25);
        }

            .table-modern th {
                background-color: #eaf9fb !important;
                color: #0077B6;
                font-weight: 700;
                border-bottom: 2px solid #00B4D8;
            }

            .table-modern tbody tr:hover {
                background-color: #f3fcfd !important;
                transition: .2s ease;
            }

        /* 🌟 الأنيميشن */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
