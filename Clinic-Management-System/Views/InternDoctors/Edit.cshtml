@model Clinic_Management_System.Models.InternDoctor

@{
    ViewData["Title"] = "تعديل بيانات الطبيب المتدرب";
}

<div class="container py-4">
    <div class="card card-modern">

        <!-- 🔷 العنوان -->
        <h3 class="text-center text-warning fw-bold mb-4">
            <i class="bi bi-pencil-square"></i> تعديل بيانات الطبيب المتدرب
        </h3>

        <form asp-action="Edit" method="post" class="row g-3 w-75 mx-auto">
            @Html.AntiForgeryToken()

            <!-- نخلي الـ ID hidden -->
            <input type="hidden" asp-for="InternDoctorId" />

            <!-- 🔹 الاسم الكامل -->
            <div class="col-md-6">
                <label asp-for="FullName" class="form-label fw-semibold text-primary">الاسم الكامل</label>
                <input asp-for="FullName" class="form-control border-2 rounded-3" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <!-- 🔹 رقم الهاتف -->
            <div class="col-md-6">
                <label asp-for="Phone" class="form-label fw-semibold text-primary">رقم الهاتف</label>
                <input asp-for="Phone" maxlength="11" class="form-control border-2 rounded-3" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <!-- 🔹 الملاحظات -->
            <div class="col-md-12">
                <label asp-for="Notes" class="form-label fw-semibold text-primary">ملاحظات</label>
                <textarea asp-for="Notes" rows="3" class="form-control border-2 rounded-3"></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>

            <!-- 🔹 حالة الطبيب -->
            <div class="col-md-6">
                <div class="form-check mt-4 ms-2">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">نشط</label>
                </div>
            </div>

            <!-- 🔘 الأزرار -->
            <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-warning text-white px-4 rounded-pill">
                    <i class="bi bi-check-circle"></i> حفظ التعديلات
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                    <i class="bi bi-arrow-return-left"></i> رجوع
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>

        /* 🌟 الكارد الموحد */
        .card-modern {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            border: 2px solid #0077B6;
            box-shadow: 0 10px 30px rgba(0, 119, 182, 0.45);
            animation: fadeIn .4s ease;
        }

        /* 🌟 تنسيق الحقول */
        .form-label {
            color: #0077B6;
            font-weight: 600;
        }

        .form-control {
            border: 2px solid #00B4D8;
            border-radius: 10px;
            transition: all .3s ease;
        }

            .form-control:focus {
                border-color: #0077B6;
                box-shadow: 0 0 0 .2rem rgba(0,183,255,.25);
            }

        /* 🌟 زر التعديل */
        .btn-warning {
            background-color: #ffb703;
            border-color: #ffb703;
        }

            .btn-warning:hover {
                background-color: #ffa500;
                border-color: #e69500;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

    </style>
}
