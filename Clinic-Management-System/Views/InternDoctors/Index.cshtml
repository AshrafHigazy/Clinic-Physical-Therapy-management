@model IEnumerable<Clinic_Management_System.Models.InternDoctor>

@{
    ViewData["Title"] = "قائمة الأطباء المتدربين";
}

<div class="container py-4">

    <!-- 🔷 الكارد -->
    <div class="card card-modern">

        <!-- العنوان + الأزرار -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
            <h3 class="text-primary fw-bold m-0">
                <i class="bi bi-people-fill"></i> قائمة الأطباء المتدربين
            </h3>

            <div class="d-flex gap-2 flex-wrap">
                <a asp-action="Create" class="btn btn-success rounded-pill px-4">
                    إضافة طبيب جديد
                </a>

                <a asp-controller="InternDoctorAttendance"
                   asp-action="Index"
                   class="btn btn-outline-primary rounded-pill px-4">
                    حضور الطبيب المتدرب
                </a>
            </div>
        </div>

        <!-- رسالة الإشعار -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info text-center fw-bold mb-3 rounded-3 shadow-sm">
                @TempData["Message"]
            </div>
        }

        <!-- 🔍 البحث -->
        <form method="get" class="mb-4">
            <div class="input-group">
                <input type="text"
                       name="search"
                       value="@Context.Request.Query["search"]"
                       class="form-control border-2 rounded-start-3"
                       placeholder="ابحث بالاسم أو الهاتف..." />

                <button type="submit" class="btn btn-primary rounded-end-3 px-4">
                    <i class="bi bi-search"></i> بحث
                </button>
            </div>
        </form>

        <!-- 🔷 الجدول -->
        <div class="table-responsive">
            <table class="table table-modern table-hover text-center align-middle">
                <thead>
                    <tr>
                        <th>الكود</th>
                        <th>الاسم</th>
                        <th>الهاتف</th>
                        <th>النشاط</th>
                        <th>العمليات</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.InternDoctorId</td>
                            <td>@doctor.FullName</td>
                            <td>@doctor.Phone</td>

                            <td>
                                @if (doctor.IsActive)
                                {
                                    <span class="badge bg-success px-3 py-2">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2">غير نشط</span>
                                }
                            </td>

                            <td>
                                <div class="d-flex justify-content-center flex-wrap gap-2">

                                    <!-- تفاصيل -->
                                    <a asp-action="GetById"
                                       asp-route-id="@doctor.InternDoctorId"
                                       class="btn btn-outline-info btn-sm rounded-pill">
                                        تفاصيل
                                    </a>

                                    <!-- تعديل -->
                                    <a asp-action="Edit"
                                       asp-route-id="@doctor.InternDoctorId"
                                       class="btn btn-outline-warning btn-sm rounded-pill">
                                        تعديل
                                    </a>

                                    <!-- حذف → يفتح صفحة التأكيد -->
                                    <a asp-action="Delete"
                                       asp-route-id="@doctor.InternDoctorId"
                                       class="btn btn-outline-danger btn-sm rounded-pill">
                                        حذف
                                    </a>

                                    <!-- تفعيل/تعطيل -->
                                    <form asp-action="ToggleActive"
                                          asp-route-id="@doctor.InternDoctorId"
                                          method="post">
                                        <button type="submit"
                                                class="btn btn-outline-secondary btn-sm rounded-pill">
                                            @(doctor.IsActive ? "تعطيل" : "تفعيل")
                                        </button>
                                    </form>

                                    <!-- Check In / Check Out -->
                                    @if (doctor.IsActive)
                                    {
                                        <!-- Check In -->
                                        <form asp-controller="InternDoctorAttendance"
                                              asp-action="QuickCheckIn"
                                              method="post">
                                            <input type="hidden" name="doctorId" value="@doctor.InternDoctorId" />
                                            <button type="submit"
                                                    class="btn btn-success btn-sm rounded-pill">
                                                تسجيل حضور
                                            </button>
                                        </form>

                                        <!-- Check Out -->
                                        <form asp-controller="InternDoctorAttendance"
                                              asp-action="QuickCheckOut"
                                              method="post">
                                            <input type="hidden" name="doctorId" value="@doctor.InternDoctorId" />
                                            <button type="submit"
                                                    class="btn btn-danger btn-sm rounded-pill">
                                                تسجيل انصراف
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* 🌟 الكارد الأزرق الموحد */
        .card-modern {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            border: 2px solid #0077B6;
            box-shadow: 0 10px 30px rgba(0,119,182,0.45);
            animation: fadeIn .4s ease;
        }

        /* 🌟 الجدول الموحد */
        .table-modern {
            border-radius: 12px;
            overflow: hidden;
            background: #ffffff;
            box-shadow: 0 4px 15px rgba(0,119,182,0.25);
        }

            .table-modern th {
                background-color: #eaf9fb !important;
                color: #0077B6;
                font-weight: 700;
                border-bottom: 2px solid #00B4D8;
            }

            .table-modern tbody tr:hover {
                background-color: #f3fcfd !important;
                transition: .2s ease;
            }

        .form-control {
            border: 2px solid #00B4D8;
            border-radius: 10px;
            transition: .3s ease;
        }

            .form-control:focus {
                border-color: #0077B6;
                box-shadow: 0 0 0 .2rem rgba(0,183,255,0.25);
            }

        .btn-success {
            background-color: #00B4D8;
            border-color: #0077B6;
            font-weight: 600;
        }

            .btn-success:hover {
                background-color: #0096c7;
            }

        .btn-primary {
            background-color: #0077B6;
            border-color: #0077B6;
        }

            .btn-primary:hover {
                background-color: #005f8a;
                border-color: #005f8a;
            }

        .btn-outline-info:hover {
            background-color: #00B4D8;
            border-color: #00B4D8;
            color: #fff !important;
        }

        .btn-outline-warning:hover {
            background-color: #ffb703;
            border-color: #ffb703;
            color: #fff !important;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
